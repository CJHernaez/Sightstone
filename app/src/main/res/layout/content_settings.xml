<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sightstone.cjhmdm.sightstone.Settings"
    tools:showIn="@layout/activity_settings">
    <TextView
        android:id="@+id/settings_summ_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Summoner Name" />
    <EditText
        android:id="@+id/settings_summ_name_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:minLength="3"
        android:layout_below="@id/settings_summ_name_text" />
    <Button
        android:id="@+id/settings_set_summ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/settings_summ_name_field"
        android:layout_below="@id/settings_summ_name_text"
        android:text="save"/>
    <TextView
        android:id="@+id/settings_match_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/settings_summ_name_field"
        android:text="Current match notifications" />
    <CheckBox
        android:id="@+id/settings_match_notification_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_toRightOf="@id/settings_match_notification_text"
        android:layout_below="@id/settings_summ_name_field"/>
    <TextView
        android:id="@+id/settings_patch_notes_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/settings_match_notification_text"
        android:text="New patch notes notifications" />
    <CheckBox
        android:id="@+id/settings_patch_notes_notification_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_toRightOf="@id/settings_patch_notes_notification_text"
        android:layout_below="@id/settings_match_notification_text"/>




</RelativeLayout>
