<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sightstone.cjhmdm.sightstone.ChampionInfo"
    tools:showIn="@layout/activity_champion_info">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="top"
        android:layout_marginTop="15sp">
        <TextView
            android:id="@+id/info_champion_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="Champion Name" />
        <ImageView
            android:id="@+id/info_champion_icon"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/icon_udyr"
            android:layout_below="@id/info_champion_name"
            android:layout_centerHorizontal="true"
            />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center"
        android:layout_toRightOf="@id/info_champion_icon"
        android:layout_marginTop="15sp">
        <TextView
            android:id="@+id/info_champion_skill_set_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="List view with skills and their descriptions." />
    </RelativeLayout>

</LinearLayout>
